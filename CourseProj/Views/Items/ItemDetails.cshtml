@model ItemDetailsViewModel


<div>
    <h2>@Model.Item.Name</h2>

    <div>
        <img src="@("~/image/"+ Model.Item.Image.ImageName)" asp-append-version="true" width="250px" height="250px" />
    </div>

    <h3>
        @foreach (var tagObject in Model.Item.tags)
        {@string.Concat("#", tagObject.tag)}
    </h3>


    <div>
        @if (Model.Collection.NumericField1_visible)
        {
            <div>
                <p> @Model.Collection.NumericField1_name:@Model.Item.NumericField1 </p>
            </div>
        }

        @if (Model.Collection.NumericField2_visible)
        {
            <div>
                <p> @Model.Collection.NumericField2_name:@Model.Item.NumericField2 </p>
            </div>
        }
        @if (Model.Collection.NumericField3_visible)
        {
            <div>
                <p> @Model.Collection.NumericField3_name:@Model.Item.NumericField3 </p>
            </div>
        }
    </div>

    <div>
        @if (Model.Collection.StringField1_visible)
        {
            <div>
                <p> @Model.Collection.StringField1_name:@Model.Item.StringField1 </p>
            </div>
        }

        @if (Model.Collection.StringField2_visible)
        {
            <div>
                <p> @Model.Collection.StringField2_name:@Model.Item.StringField2 </p>
            </div>
        }
        @if (Model.Collection.StringField3_visible)
        {
            <div>
                <p> @Model.Collection.StringField3_name:@Model.Item.StringField3 </p>
            </div>
        }
    </div>

    <div>
        @if (Model.Collection.TextField1_visible)
        {
            <div>
                <p> @Model.Collection.TextField1_name:@Model.Item.TextField1 </p>
            </div>
        }

        @if (Model.Collection.TextField2_visible)
        {
            <div>
                <p> @Model.Collection.TextField2_name:@Model.Item.TextField2 </p>
            </div>
        }
        @if (Model.Collection.TextField3_visible)
        {
            <div>
                <p> @Model.Collection.TextField3_name:@Model.Item.TextField3 </p>
            </div>
        }
    </div>

    <div>
        @if (Model.Collection.DateField1_visible)
        {
            <div>
                <p> @Model.Collection.DateField1_name:@Model.Item.DateField1 </p>
            </div>
        }

        @if (Model.Collection.DateField2_visible)
        {
            <div>
                <p> @Model.Collection.DateField2_name:@Model.Item.DateField2 </p>
            </div>
        }
        @if (Model.Collection.DateField3_visible)
        {
            <div>
                <p> @Model.Collection.DateField3_name:@Model.Item.DateField3 </p>
            </div>
        }
    </div>

    <div>

        @if (Model.Collection.BooleanField1_visible)
        {
            <div>
                <p> @Model.Collection.BooleanField1_name:@Model.Item.BooleanField1 </p>
            </div>
        }

        @if (Model.Collection.BooleanField2_visible)
        {
            <div>
                <p> @Model.Collection.BooleanField2_name:@Model.Item.BooleanField2 </p>
            </div>
        }
        @if (Model.Collection.BooleanField3_visible)
        {
            <div>
                <p> @Model.Collection.BooleanField3_name:@Model.Item.BooleanField3 </p>
            </div>
        }
    </div>

    <a class="btn btn-warning" asp-controller="Items" asp-action="LikeCreation" asp-route-itemID="@Model.Item.ID"> Like! @{if (Model.GetItemLikes != null) @Model.GetItemLikes.Count()}</a>
    <a class="btn btn-warning" asp-controller="Collections" asp-action="CollectionDetails" asp-route-collectionID="@Model.Item.CollectionID"> To collection </a>

    <form asp-action="ItemDetails" method="post" class="align-self-md-auto">
        <div class="form-group" style="" hidden="hidden">
            <label asp-for="Item.ID"></label>
            <div>
                <input asp-for="Item.ID" value="@Model.Item.ID" />
            </div>
        </div>

        <input asp-for="CommentText" />
        <input class="btn btn-success" type="submit" value="+Add Comment" />
    </form>

    <p></p>

    <h3>Comments</h3>
    <table align="left" class="table table-striped table-bordered ">
        @{
            if (Model.GetItemComments != null)
                foreach (Comment comment in Model.GetItemComments)
                {
                    <tr><th><div>@comment.UserName:</div> <div>@comment.CommentText</div></th></tr>
                }
        }
    </table>

</div>