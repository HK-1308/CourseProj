@model SearchViewModel

<form method="post">
    <div class="row form-group">
        <div class="col-md-7">
            <input asp-for="@Model.Text" class="form-control" id="TextSearchInput" placeholder="Search" />
        </div>
        <div class="col-md-5">
            <button class="btn btn-success" id="ApplyTextSearchButton"> Search </button>
        </div>
    </div>
</form>

<div class="nl">
    <table class="table table-striped table-bordered ">
        <tbody class="table-responsive ">
            <tr><th>Item's name</th><th>Tags</th><th>Collection's name</th><th>Theme</th></tr>
            @foreach (var item in Model.items)
            {
            <tr>
                <td>
                    <a asp-controller="Users" asp-action="ItemDetails" asp-route-itemID="@item.ID"> @item.Name</a>
                </td>
                <td>
                    @item.Tags
                </td>
                <td>
                    <a asp-controller="Users" asp-action="CollectionDetails" asp-route-collectionID="@item.CollectionID">@item.Collection.Name</a>
                </td>
                <td>
                    @item.Collection.Theme
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>


