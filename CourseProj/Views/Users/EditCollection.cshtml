@model ItemListInCollectionEditModel
<div>
    <form asp-action="EditCollection" method="post" class="align-self-md-auto">

        <div>
            <input class="btn btn-success" type="submit" value="Save changes" />
            <a class="btn btn-light" asp-controller="Users" asp-action="CreateNewItem" asp-route-collectionID="@Model.ID"> + New item </a>
            <a class="btn btn-light" asp-controller="Users" asp-action="DeleteCollection" asp-route-collectionID="@Model.ID"> Delete </a>
            <a class="btn btn-light" asp-controller="Users" asp-action="UserPage" asp-route-userID="@Model.UserID"> Back </a>
        </div>

        <div class="form-group" style="" hidden="hidden">
            <label asp-for="ID"></label>
            <div>
                <input asp-for="ID" value="@Model.ID" />
            </div>
        </div>

        <div class="form-group" style="">
            <label asp-for="Name"></label>
            <div>
                <input asp-for="Name" value="@Model.Name" />
            </div>
        </div>

        <div class="form-group" style="">
            <label asp-for="Theme"></label>
            <div>
                <input asp-for="Theme" value="@Model.Theme" />
            </div>
        </div>
    </form>
</div>

