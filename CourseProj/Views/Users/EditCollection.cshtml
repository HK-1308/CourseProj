                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Tags
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Users" asp-action="EditItem" asp-route-itemID="@item.ID"> Edit </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
}
